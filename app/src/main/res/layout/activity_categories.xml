<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="phonezilla.icu.UI.CategoriesActivity"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@android:color/white">

    <TextView
        android:text="Kies een categorie om te beginnen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/categoriesTextViewTextView"
        android:padding="20dp"
        android:textSize="23dp"
        android:textColor="#80ff0000"
        android:background="match_parent"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eyeTestRulesButton"
        android:layout_gravity="right|center"
        android:src="@mipmap/ic_help_outline_black_36dp"

        android:background="#ffffff"
        android:layout_alignBottom="@+id/eyeTestButton"
        android:layout_alignTop="@+id/eyeTestButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingLeft="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Algemene Oogtest"
        android:id="@+id/eyeTestButton"
        android:textColor="@android:color/white"
        android:background="#ff0000"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/categoriesTextViewTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/trafficButton"
        android:layout_alignEnd="@+id/trafficButton"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verkeer"
        android:id="@+id/trafficButton"
        android:textColor="@android:color/white"
        android:background="#ff0000"
        android:padding="15dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/eyeTestRulesButton"
        android:layout_toStartOf="@+id/eyeTestRulesButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kleurenblindheid"
        android:id="@+id/colorblindButton"
        android:layout_marginTop="80dp"
        android:textColor="@android:color/white"
        android:background="#ff0000"
        android:layout_below="@+id/trafficButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/trafficButton"
        android:layout_alignEnd="@+id/trafficButton"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_gravity="right|center"
        android:src="@mipmap/ic_help_outline_black_36dp"
        android:background="#ffffff"
        android:paddingLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:layout_gravity="right|center"
        android:src="@mipmap/ic_help_outline_black_36dp"
        android:background="#ffffff"
        android:paddingLeft="10dp"
        android:layout_alignBottom="@+id/colorblindButton"
        android:layout_alignRight="@+id/imageButton"
        android:layout_alignEnd="@+id/imageButton"/>
</RelativeLayout>
