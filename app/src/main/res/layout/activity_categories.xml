<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="phonezilla.icu.UI.CategoriesActivity"
    android:orientation="vertical">

    <TextView
        android:text="Kies een categorie om te beginnen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/categoriesTextViewTextView"
        android:padding="20dp"
        android:textSize="23dp"
        android:textColor="#80ff0000"/>

    <Button
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:text="Algemene Oogtest"
        android:id="@+id/eyeTestButton"
        android:layout_above="@+id/trafficButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="81dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:background="#ff0000"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:text="Verkeer"
        android:id="@+id/trafficButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:background="#ff0000"
        android:layout_margin="20dp"/>

    <Button
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:text="Kleurenblindheid"
        android:id="@+id/colorblindButton"
        android:layout_marginTop="81dp"
        android:layout_below="@+id/trafficButton"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:background="#ff0000"/>
</LinearLayout>
